{
  "name": "umbress",
  "version": "1.0.0",
  "description": "Dynamic and flexible Express anti-DDoS middleware",
  "main": "dist/index.js",
  "scripts": {
    "build": "run-s test build:pre build:build build:post",
    "watch": "tsc --watch --project ./tsconfig.json",
    "build:pre": "rimraf dist",
    "build:skip-tests": "run-s build:pre build:build build:post",
    "build:build": "tsc --project ./tsconfig.json",
    "build:post": "copyfiles -u 2 src/types/index.d.ts dist/types",
    "test": "jest --config config/jest.json"
  },
  "keywords": [
    "ddos",
    "mitigation",
    "express"
  ],
  "files": [
    "dist"
  ],
  "types": "./dist/types/index.d.ts",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/JamesJGoodwin/umbress.git"
  },
  "author": "JamesJGoodwin",
  "license": "MIT",
  "dependencies": {
    "node-fetch": "^2.6.0"
  },
  "devDependencies": {
    "@types/express": "^4.17.2",
    "@types/jest": "^24.0.23",
    "@types/node": "^12.12.8",
    "@types/node-fetch": "^2.5.4",
    "@types/supertest": "^2.0.8",
    "@typescript-eslint/eslint-plugin": "^2.8.0",
    "@typescript-eslint/parser": "^2.8.0",
    "copyfiles": "^2.1.1",
    "eslint": "^6.6.0",
    "eslint-config-prettier": "^6.7.0",
    "eslint-plugin-prettier": "^3.1.1",
    "express": "^4.17.1",
    "jest": "^24.9.0",
    "npm-run-all": "^4.1.5",
    "prettier": "^1.19.1",
    "rimraf": "^3.0.0",
    "supertest": "^4.0.2",
    "ts-jest": "^24.1.0",
    "typescript": "^3.7.2"
  }
}
