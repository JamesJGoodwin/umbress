{
    "compileOnSave": true,
    "compilerOptions": {
        "module": "commonjs",
        "pretty": true,
        "allowJs": false,
        "inlineSourceMap": false,
        "strict": true,
        "strictNullChecks": false,
        "noUnusedLocals": true,
        "suppressImplicitAnyIndexErrors": true,
        "moduleResolution": "node",
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "target": "es2015",
        "outDir": "./build",
        "rootDir": "./src",
        "noImplicitAny": true,
        "declaration": true,
        "emitDeclarationOnly": true
    },
    "include": [
        "src/types/global.ts"
    ]
  }