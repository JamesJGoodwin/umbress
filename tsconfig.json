{
    "compileOnSave": true,
    "compilerOptions": {
        "lib": ["es2019.array"],
        "target": "es6",
        "module": "commonjs",
        "pretty": true,
        "allowJs": false,
        "inlineSourceMap": false,
        "removeComments": true,
        "strict": true,
        "strictNullChecks": false,
        "noUnusedLocals": true,
        "suppressImplicitAnyIndexErrors": true,
        "moduleResolution": "node",
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "outDir": "dist",
        "rootDir": "src",
        "noImplicitAny": true,
        "declaration": true
    },
    "exclude": [
        "src/__tests__",
        "node_modules",
        "dist"
    ]
  }