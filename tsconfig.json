{
    "compileOnSave": true,
    "compilerOptions": {
        "module": "commonjs",
        "pretty": true,
        "allowJs": false,
        "inlineSourceMap": false,
        "removeComments": true,
        "strict": true,
        "strictNullChecks": false,
        "noUnusedLocals": true,
        "suppressImplicitAnyIndexErrors": true,
        "moduleResolution": "node",
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "noImplicitAny": true,
        "declaration": true
    },
    "exclude": [
        "src/__tests__",
        "node_modules",
        "dist",
        "public/dist"
    ]
  }